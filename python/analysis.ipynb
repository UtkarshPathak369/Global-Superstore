# Libraries
import pandas as pd
import matplotlib.pyplot as plt

# Load CSV
df = pd.read_csv('../data/Global_Superstore(CSV).csv')

# Quick view
df.head()
# Total sales by Region
region_sales = df.groupby('Region')['Sales'].sum()
region_sales.plot(kind='bar', title='Total Sales by Region')
plt.xlabel('Region')
plt.ylabel('Sales')
plt.show()

# Total profit by Category
category_profit = df.groupby('Category')['Profit'].sum()
category_profit.plot(kind='bar', title='Total Profit by Category', color='green')
plt.xlabel('Category')
plt.ylabel('Profit')
plt.show()

# Top 5 Products by Sales
top_products = df.groupby('Product Name')['Sales'].sum().sort_values(ascending=False).head(5)
top_products.plot(kind='bar', title='Top 5 Products by Sales', color='orange')
plt.xlabel('Product Name')
plt.ylabel('Sales')
plt.show()
